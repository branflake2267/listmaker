<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:c="urn:import:com.sencha.gxt.widget.core.client.container"
        xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
        xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
        xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
        xmlns:menu="urn:import:com.sencha.gxt.widget.core.client.menu"
        xmlns:chart="urn:import:com.sencha.gxt.chart.client.chart">

    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData"
             field="verticalLayoutData">
        <ui:attributes width="1" height="-1"/>
    </ui:with>

    <gxt:ContentPanel>

        <g:VerticalPanel spacing="10">

            <c:VerticalLayoutContainer>

                <c:child layoutData="{verticalLayoutData}">
                    <form:FieldLabel text="First">
                        <form:widget>
                            <form:TextField ui:field="firstName" allowBlank="false" emptyText="First name..."/>
                        </form:widget>
                    </form:FieldLabel>
                </c:child>

                <c:child layoutData="{verticalLayoutData}">
                    <form:FieldLabel text="Last">
                        <form:widget>
                            <form:TextField ui:field="lastName" allowBlank="false" emptyText="Last name..."/>
                        </form:widget>
                    </form:FieldLabel>
                </c:child>

                <c:child layoutData="{verticalLayoutData}">
                    <form:FieldLabel text="Email">
                        <form:widget>
                            <form:TextField ui:field="email" emptyText="Email..."/>
                        </form:widget>
                    </form:FieldLabel>
                </c:child>

            </c:VerticalLayoutContainer>

        </g:VerticalPanel>

    </gxt:ContentPanel>

</ui:UiBinder>